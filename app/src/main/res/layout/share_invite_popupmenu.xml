<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shaper_corner_white"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/invite_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/title"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/invite_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/title"
                    android:textSize="16dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/small_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="@color/home_loan_period_textcolor"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:background="@null"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/share_weixin_friendster_layout"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/share_weixin_friendster_pic"
                    style="@style/share_invite_img"
                    android:src="@drawable/icon_friends" />

                <TextView
                    android:id="@+id/share_weixin_friendster_value"
                    style="@style/share_invite"
                    android:layout_below="@+id/share_weixin_friendster_pic"
                    android:text="朋友圈" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/share_weixin_friends_layout"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/share_weixin_friends_pic"
                    style="@style/share_invite_img"
                    android:src="@drawable/icon_wewchat" />

                <TextView
                    android:id="@+id/share_weixin_friends_value"
                    style="@style/share_invite"
                    android:layout_below="@+id/share_weixin_friends_pic"
                    android:text="微信好友" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/share_qq_friends_layout"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/share_qq_friends_pic"
                    style="@style/share_invite_img"
                    android:src="@drawable/icon_qq" />

                <TextView
                    android:id="@+id/share_qq_friends_value"
                    style="@style/share_invite"
                    android:layout_below="@+id/share_qq_friends_pic"
                    android:text="QQ好友" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:gravity="center"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/share_sim_layout"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/share_sim_pic"
                    style="@style/share_invite_img"
                    android:src="@drawable/icon_sim" />

                <TextView
                    android:id="@+id/share_sim_value"
                    style="@style/share_invite"
                    android:layout_below="@+id/share_sim_pic"
                    android:text="手机短信" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/share_copy_address_layout"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/share_copy_address_pic"
                    style="@style/share_invite_img"
                    android:src="@drawable/icon_wewchat" />

                <TextView
                    android:id="@+id/share_copy_address_value"
                    style="@style/share_invite"
                    android:layout_below="@+id/share_copy_address_pic"
                    android:text="复制链接" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/share_xinlang_weibo_layout"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/share_xinlang_weibo_pic"
                    style="@style/share_invite_img"
                    android:src="@drawable/icon_wewchat" />

                <TextView
                    android:id="@+id/share_xinlang_weibo_value"
                    style="@style/share_invite"
                    android:layout_below="@+id/share_xinlang_weibo_pic"
                    android:text="新浪微博"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:layout_margin="10dp"
        android:background="@drawable/shaper_corner_white"
        android:gravity="center"
        android:text="取消"
        android:textColor="#0090FF"
        android:textSize="16sp"
        android:typeface="normal"
        android:visibility="gone" />
</LinearLayout>